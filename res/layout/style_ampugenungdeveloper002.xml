<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android
    ="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/style_theforbiddenone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pro.gr.ams.historicalfactboy.ampugenungdeveloper002"
    android:background="@raw/ampugenungdeveloper_background001">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="105dp">

        <TextView
            android:text="Output"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/txtnum1back"
            android:layout_toStartOf="@+id/btnEncryptorDecrypt"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="normal|italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayIdback"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                tools:inputType="textMultiLine"
                android:layout_marginBottom="-30dp"
                android:background="@android:drawable/screen_background_dark_transparent" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/displayId"
                android:textAlignment="viewStart"
                android:hint="Result displays here"
                android:selectAllOnFocus="false"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:gravity="top"
                tools:inputType="textMultiLine"
                android:layout_marginBottom="-30dp"
                android:textColorLink="?attr/actionMenuTextColor"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_green_dark" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:text="Input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|italic" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnum1back"
        tools:inputType="textMultiLine"
        android:textColor="?android:attr/colorPressedHighlight"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/txtnum1back"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="75dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/txtnum1"
            android:hint="Insert here to encrypt/decrypt"
            tools:inputType="textMultiLine"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnEncryptorDecrypt"
            android:layout_marginLeft="280dp"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/ic_menu_send"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <Button
        android:text="   d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/holo_green_dark"
        android:gravity="bottom"
        android:textSize="15dp"
        android:onClick="change"
        android:layout_marginEnd="69dp"
        android:layout_above="@+id/txtnum1back"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
